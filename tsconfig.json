{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["ES2021"],
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
